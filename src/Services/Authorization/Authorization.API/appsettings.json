{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "AuthPostgresDb": ""
  },
  "Issuer": "",
  "Authority": "",
  "SigningCertificate": {
    "Subject": "blog.auth",
    "ExpirationYears": 1,
    "RotationIntervalDays": 90,
    "ActiveCertificatesCount": 5
  },
  "Tokens": {
    "IdentityToken": {
      "Name": "id_token",
      "ExpirationHours": 2,
      "Audience": ""
    },
    "AccessToken": {
      "Name": "access_token",
      "ExpirationMinutes": 15,
      "Audiences": {
        "BloggingService": "blog.blogging",
        "UsersService": "blog.users",
        "CommentsService": "blog.comments",
        "AuthService": "blog.auth",
        "EmailingService": "blog.emailing"
      }
    },
    "RefreshToken": {
      "Name": "refresh_token",
      "ExpirationDays": 14,
      "Audience": "blog.auth",
      "HmacSecretKey": ""
    }
  }
}